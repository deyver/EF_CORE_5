        </div>

        <div class="form-group">
            <label asp-for="IndicatorId" class="control-label"></label>
            <select asp-for="IndicatorId" asp-items="ViewBag.Indicator" class="selectpicker show-tick" data-style="custom-select" data-live-search="true" data-selected-text-format="count" data-width="100%" data-size="4"></select>
            <span asp-validation-for="IndicatorId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="GoalId" class="control-label"></label>
            <select asp-for="GoalId" asp-items="ViewBag.Goal" class="selectpicker show-tick" data-style="custom-select" data-live-search="true" data-selected-text-format="count" data-width="100%" data-size="4"></select>
            <span asp-validation-for="GoalId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BusinessUnitId" class="control-label"></label>
            <select asp-for="BusinessUnitId" asp-items="ViewBag.BusinessUnit" class="selectpicker show-tick" data-style="custom-select" data-live-search="true" data-selected-text-format="count" data-width="100%" data-size="4"></select>
            <span asp-validation-for="BusinessUnitId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="StfNumber" class="control-label"></label>
            <input asp-for="StfNumber" class="form-control" name="StfNumber" />
            <span asp-validation-for="StfNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="GeneralTarget" class="control-label"></label>
            <input asp-for="GeneralTarget" class="form-control" name="GeneralTarget" />
            <span asp-validation-for="GeneralTarget" class="text-danger"></span>
        </div>

        <table>
            <tr>
                <td>
                    <div class="form-group">
                        <label asp-for="JulTarget" class="control-label"></label>
                        <input asp-for="JulTarget" class="form-control" name="JulTarget" />
                        <span asp-validation-for="JulTarget" class="text-danger"></span>
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <label asp-for="AugTarget" class="control-label"></label>
                        <input asp-for="AugTarget" class="form-control" name="AugTarget" />
                        <span asp-validation-for="AugTarget" class="text-danger"></span>
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <label asp-for="SepTarget" class="control-label"></label>
                        <input asp-for="SepTarget" class="form-control" name="SepTarget" />
                        <span asp-validation-for="SepTarget" class="text-danger"></span>
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <label asp-for="OctTarget" class="control-label"></label>
                        <input asp-for="OctTarget" class="form-control" name="OctTarget" />
                        <span asp-validation-for="OctTarget" class="text-danger"></span>
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <label asp-for="NovTarget" class="control-label"></label>
                        <input asp-for="NovTarget" class="form-control" name="NovTarget" />
                        <span asp-validation-for="NovTarget" class="text-danger"></span>
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <label asp-for="DecTarget" class="control-label"></label>
                        <input asp-for="DecTarget" class="form-control" name="DecTarget" />
                        <span asp-validation-for="DecTarget" class="text-danger"></span>
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="form-group">
                        <label asp-for="JanTarget" class="control-label"></label>
                        <input asp-for="JanTarget" class="form-control" name="JanTarget" />
                        <span asp-validation-for="JanTarget" class="text-danger"></span>
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <label asp-for="FebTarget" class="control-label"></label>
                        <input asp-for="FebTarget" class="form-control" name="FebTarget" />
                        <span asp-validation-for="FebTarget" class="text-danger"></span>
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <label asp-for="MarTarget" class="control-label"></label>
                        <input asp-for="MarTarget" class="form-control" name="MarTarget" />
                        <span asp-validation-for="MarTarget" class="text-danger"></span>
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <label asp-for="AprTarget" class="control-label"></label>
                        <input asp-for="AprTarget" class="form-control" name="AprTarget" />
                        <span asp-validation-for="AprTarget" class="text-danger"></span>
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <label asp-for="MayTarget" class="control-label"></label>
                        <input asp-for="MayTarget" class="form-control" name="MayTarget" />
                        <span asp-validation-for="MayTarget" class="text-danger"></span>
                    </div>
                </td>
                <td>
                    <div class="form-group">
                        <label asp-for="JunTarget" class="control-label"></label>
                        <input asp-for="JunTarget" class="form-control" name="JunTarget" />
                        <span asp-validation-for="JunTarget" class="text-danger"></span>
                    </div>
                </td>
            </tr>
        </table>

    </div>

</form>

<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">@SharedLocalizer.GetLocalizedHtmlString("Fechar")</button>
    <button type="button" id="botaoModalOk" class="btn btn-primary">@SharedLocalizer.GetLocalizedHtmlString("Salvar")</button>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

<script>$(document).ready(function () {

    $('#GeneralTarget').mask("0.000.000.000,00", { reverse: true, selectOnFocus: true });
    $('#JanTarget').mask("0.000.000.000,00", { reverse: true, selectOnFocus: true });
    $('#FebTarget').mask("0.000.000.000,00", { reverse: true, selectOnFocus: true });
    $('#MarTarget').mask("0.000.000.000,00", { reverse: true, selectOnFocus: true });
    $('#AprTarget').mask("0.000.000.000,00", { reverse: true, selectOnFocus: true });
    $('#MayTarget').mask("0.000.000.000,00", { reverse: true, selectOnFocus: true });
    $('#JunTarget').mask("0.000.000.000,00", { reverse: true, selectOnFocus: true });
    $('#JulTarget').mask("0.000.000.000,00", { reverse: true, selectOnFocus: true });
    $('#AugTarget').mask("0.000.000.000,00", { reverse: true, selectOnFocus: true });
    $('#SepTarget').mask("0.000.000.000,00", { reverse: true, selectOnFocus: true });
    $('#OctTarget').mask("0.000.000.000,00", { reverse: true, selectOnFocus: true });
    $('#NovTarget').mask("0.000.000.000,00", { reverse: true, selectOnFocus: true });
    $('#DecTarget').mask("0.000.000.000,00", { reverse: true, selectOnFocus: true });

    $('select').selectpicker();

        $('#botaoModalOk').on('click', function () {
            $.ajax({
                type: 'POST',
                url: '/GoalStf/Create',
                dataType: 'json',
                data: $('form[name=Cadastro]').serialize(),
                success: function (data) {

                    if (!data.Sucesso) {

                        Swal.fire({
                            icon: 'error',
                            title: 'Erro',
                            html: data.Mensagem
                        });
                        return false;
                    }

                    Swal.fire({
                        icon: 'success',
                        title: 'Sucesso',
                        text: data.Mensagem,
                        timer: 2000,
                        timerProgressBar: true,
                        onBeforeOpen: () => {
                            Swal.showLoading()
                            timerInterval = setInterval(() => {
                                const content = Swal.getContent()
                                if (content) {
                                    const b = content.querySelector('b')
                                    if (b) {
                                        b.textContent = Swal.getTimerLeft()
                                    }
                                }
                            }, 100)
                        },
                        onClose: () => {
                            clearInterval(timerInterval)
                        }
                    }).then((result) => {

                        $('#myModal').modal('hide');
                        ListarTodos();
                    });
                }
            })

        });

});
</script>