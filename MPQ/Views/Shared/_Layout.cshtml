<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MPQ</title>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap-select/js/bootstrap-select.min.js" type="text/javascript"></script>
    <script src="~/lib/bootstrap-colorpicker/js/bootstrap-colorpicker.min.js" type="text/javascript"></script>
    <script src="~/lib/bootstrap-datepicker/js/bootstrap-datepicker.min.js" type="text/javascript"></script>
    <script src="~/lib/jquery-ui/jquery-ui.js"></script>
    <script src="~/js/jqx.min.js"></script>

    <link rel="stylesheet" href="~/css/jquery-ui.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/lib/fontawesome-free-5.15.1-web/css/all.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/lib/twitter-bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site_bundle.min.css" />
    <link href="~/lib/bootstrap-select/css/bootstrap-select.min.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/bootstrap-colorpicker/css/bootstrap-colorpicker.min.css" rel="stylesheet" type="text/css" />
    <link href="~/lib/bootstrap-datepicker/css/bootstrap-datepicker.min.css" rel="stylesheet" type="text/css" />
    @RenderSection("ViewsStyles", false)

    <script src="~/js/main.min.js" asp-append-version="true"></script>
    <script src="~/js/util/jqxPageUtil.js"></script>

    @{ var culture = Context.Request.Cookies[".AspNetCore.Culture"];

        //espanha = c=es|uic=es
        //português = c=pt-BR|uic=pt-BR

        if (!string.IsNullOrEmpty(culture))
        {
            culture = culture.ToLower();
        }

        bool espanhol = culture != null && culture.StartsWith("c=es|");
        bool ingles = culture != null && culture.StartsWith("c=en-us|"); }

    @if (espanhol)
    {
<script src="~/js/i18n/resources-es.js" asp-append-version="true"></script>
                <script src="~/js/i18n/resources-mensagens-es.js" asp-append-version="true"></script>
                                <script src="~/lib/bootstrap-select/js/i18n/defaults-es_ES.min.js" asp-append-version="true"></script> }
                                            else if (ingles)
                                            {
                                <script src="~/js/i18n/resources-enUs.js" asp-append-version="true"></script>
                                                <script src="~/js/i18n/mensagens/resources-mensagens-enUs.js" asp-append-version="true"></script>
                                                                <script src="~/lib/bootstrap-select/js/i18n/defaults-en_US.min.js" asp-append-version="true"></script> }
                                                                            else
                                                                            {
                                                                <script src="~/js/i18n/resources-ptBr.js" asp-append-version="true"></script>
                                                                                <script src="~/js/i18n/mensagens/resources-mensagens-ptBr.js" asp-append-version="true"></script>
                                                                                                <script src="~/lib/bootstrap-select/js/i18n/defaults-pt_BR.min.js" asp-append-version="true"></script>}

    <script src="~/js/jsviews/shared/json.utils.js"></script>
    <script src="~/js/util/jqxPageUtil.js"></script>
    <script src="~/lib/jquery.mask/jquery.mask.min.js"></script>
    @RenderSection("Scripts", required: false)
</head>
<body>

    <div class="page-preloader"></div>
    <div class="preloader">
        <div class="spinloader-box">
            <div class="spinloader-effect"></div>
        </div>
    </div>

    <!-- Page Wrapper -->
    <div id="wrapper">
        <vc:Menu></vc:Menu>

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <vc:barra-superior></vc:barra-superior>
                <!-- End of Topbar -->
                <!-- Begin Page Content -->
                <div class="container-fluid">
                    @RenderBody()
                </div>
                <!-- End Page Content -->

            </div>

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; 2022 - MPQ</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>

    </div>

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    @RenderSection("ViewsScripts", required: false)
</body>
</html>
